<header>
  <div class="container">
    <div class="row">
      <div class="col text-center">
        <br>
        <h1>Game of Thrones Graveyard</h1>

        <h2>In the Game of Thrones, you die... or you die</h2>
      </div>
    </div>
  </div>
</header>

<main>
  <div class="container">
    <div class="row">
      <div class="col-6">
        <div class="card">
          <img class="card-img-top" src="assets/img/alive.jpg" alt="Card image cap">
          <div class="card-body">
            <h3 class="card-title">Alive (for now)</h3>
          </div>
          <ul class="list-group list-group-flush">
            {{#each characters}} {{#unless dead}} {{> chars/chars-block dead=true}} {{/unless}} {{/each}}
          </ul>
        </div>
      </div>
      <div class="col-6">
        <div class="card">
          <img class="card-img-top" src="assets/img/dead.jpg" alt="Card image cap">
          <div class="card-body">
            <h3 class="card-title">R.I.P</h3>
          </div>
          <ul class="list-group list-group-flush">
            {{#each characters}} {{#if dead}} {{> chars/chars-block dead=false}} {{/if}} {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
</main>
<br>
<div class="container">
  <div class="row">
    <div class="col">
      <div class="card card-form">
        <div class="card-body">
          <h3 class="card-title">Add a Character</h3>
          <form class="create-form">
            <div class="form-group">
              <label for="character">Character Name:</label>
              <input type="text" id="character"  class="form-control" name="name">
            </div>
            <div class="form-group">
              <label for="dead">Dead?</label>
              <select class="form-control" name="dead" id="dead">
                <option value="1">Dead</option>
                <option value="0">Alive</option>
              </select>
            </div>
            
            <button type="submit" class="btn btn-success" style="color:white;">Add Character</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<h2></h2>



</form>